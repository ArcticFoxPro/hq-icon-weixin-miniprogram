page {
  background-color: var(--td-bg-color-page);
}

.container {
  background-color: var(--td-bg-color-page);
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: border-box;
}

.top-bar {
  z-index: 1;
  background: var(--td-bg-color-container);
  padding: 24rpx;
  position: sticky;
  top: 0;
}

.filter-btn {
  padding-left: 24rpx;
  display: flex;
  align-items: center;
  height: 100%;
}

.result-wrap {
  padding: 24rpx;
}

.loading-box,
.empty-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  padding: 48rpx 0;
  color: #999;
  gap: 16rpx;
}

.empty-wrap {
  flex-direction: column;
}

.loading-box {
  min-height: 50vh;
}

.result-grid .t-grid {
  background-color: var(--td-bg-color-page) !important;
}

.result-grid .t-grid-item__content {
  --td-grid-item-padding: 0rpx;
  padding: 0 !important;
}

.result-item {
  --td-grid-item-bg-color: var(--td-bg-color-page);
}

.card {
  padding: 16rpx;
  height: auto;
  width: 100%;
  display: flex;
  border-radius: 8%;
  flex-direction: column;
  box-sizing: border-box;
  background: var(--td-bg-color-container);
}

.icon-box {
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  margin: 0 auto;
}

.card-info,
.text-scroll {
  margin-top: 16rpx;
  width: 100%;
  text-align: center;
  height: auto;
  overflow: hidden;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--td-text-color-primary);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.card-desc {
  font-size: 24rpx;
  color: var(--td-text-color-secondary);
  margin-top: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.filter-popup {
  height: 70vh;
  display: flex;
  flex-direction: column;
}

.filter-header {
  display: flex;
  align-items: center;
  padding: 16rpx;
  position: relative;
}

.filter-title {
  font-size: 32rpx;
  font-weight: 600;
  position: absolute;
  left: 0;
  right: 0;
  text-align: center;
}

.filter-content {
  overflow-y: auto;
}

.filter-option {
  padding: 16rpx;
  text-align: center;
  border-radius: 16rpx;
  border: 1rpx solid var(--td-border-level-2-color);
  transition: all 0.2s ease;
}

.filter-option.active {
  background: var(--td-brand-color);
  border-color: var(--td-brand-color);
  color: var(--td-text-color-anti);
  font-weight: 600;
}

.filter-option.disabled {
  opacity: 0.5;
  color: var(--td-text-color-disabled, #bbb);
  border-color: var(--td-border-level-1-color);
}

.options-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 12rpx;
}

.options-grid .filter-option {
  box-sizing: border-box;
  margin: 12rpx 8rpx;
}

.options-grid.col-4 .filter-option {
  width: calc(25% - 16rpx);
}

.options-grid.col-3 .filter-option {
  width: calc(33.333% - 16rpx);
}

.options-grid.col-2 .filter-option {
  width: calc(50% - 16rpx);
}

.filter-close {
  margin-left: auto;
}

.group-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: var(--td-cell-group-title-padding-left, 32rpx);
  padding-right: 32rpx;
  padding-top: 25rpx;
  height: 40rpx;
}

.t-cell-group__title{
  background-color: var(--td-bg-color-container, var(--td-bg-color-page,#ffffff)) !important;
  padding-top: 25rpx;
  line-height: 40rpx !important;
    color: var(--td-text-color-secondary) !important;
}

.group-title {
  font-size: var(--td-cell-group-title-font-size, 28rpx);
  color: var(--td-text-color-secondary);
}

.expand-btn {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: var(--td-brand-color);
  gap: 4rpx;
}

.country-collapse-container {
  overflow: hidden;
  transition: height 0.3s ease-in-out;
  height: 210rpx;
}

.preview-popup {
  width: 92vw;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  background: var(--td-bg-color-container);
  border-radius: 24rpx;
  overflow: hidden;
}

.preview-header {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  position: relative;
}

.preview-title {
  font-size: 30rpx;
  font-weight: 600;
  position: absolute;
  left: 0;
  right: 0;
  text-align: center;
}

.preview-close {
  margin-left: auto;
}

.preview-content {
  overflow-y: auto;
}

.checkerboard {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  background-color: #fff;
  background-image:
    linear-gradient(45deg, #e6e6e6 25%, transparent 25%),
    linear-gradient(-45deg, #e6e6e6 25%, transparent 25%),
    linear-gradient(45deg, transparent 75%, #e6e6e6 75%),
    linear-gradient(-45deg, transparent 75%, #e6e6e6 75%);
  background-size: 32rpx 32rpx;
  background-position: 0 0, 0 16rpx, 16rpx -16rpx, -16rpx 0;
}

.preview-image {
  max-width: 90vw;
  max-height: 70vh;
}
